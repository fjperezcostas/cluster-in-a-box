job "fabio" {
  datacenters = ["{{ datacenter }}"]
  type = "system"

  group "fabio" {
    network {
      port "ui" {
        static = {{ fabio_ui_port }}
      }
      port "lb" {
        static = {{ fabio_lb_port }}
      }
    }
    task "fabio" {
      driver = "docker"
      config {
        image = "fabiolb/fabio"
        network_mode = "host"
        ports = ["lb","ui"]
      }

      resources {
        cpu    = 200
        memory = 128
      }
    }
  }
}
