static_resources:
  listeners:
{% for listener in envoy_listeners %}
    - name: {{ listener.name }}_listener
      address:
        socket_address:
          address: 0.0.0.0
          port_value: {{ listener.port }}
      filter_chains:
        filters:
          - name: envoy.filters.network.http_connection_manager
            typed_config:
              "@type": type.googleapis.com/envoy.extensions.filters.network.http_connection_manager.v3.HttpConnectionManager
              stat_prefix: ingress_http
              access_log:
                - name: envoy.access_loggers.stdout
                  typed_config:
                    "@type": type.googleapis.com/envoy.extensions.access_loggers.stream.v3.StdoutAccessLog
              route_config:
                name: localhost
                virtual_hosts:
                  - name: localhost
                    domains: ["*"]
                    routes:
                      - match:
                          prefix: "/"
                        route:
                          cluster: {{ listener.name }}
                    response_headers_to_add:
                      - header:
                          key: "set-cookie"
                          value: "%REQ(set-cookie)%"
              http_filters:
                - name: envoy.filters.http.ext_authz
                  typed_config:
                    "@type": type.googleapis.com/envoy.extensions.filters.http.ext_authz.v3.ExtAuthz
                    http_service:
                      server_uri:
                        uri: localhost:{{ authz_server_port }}
                        cluster: authz_server
                        timeout: 0.25s
                      authorization_request:
                        allowed_headers:
                          patterns:
                            - exact: cookie
                        headers_to_add:
                          - key: x-requested-url
                            value: "%REQ(:scheme)%://%REQ(host)%%REQ(:path)%"
                      authorization_response:
                        allowed_upstream_headers:
                          patterns:
                            - exact: set-cookie
                - name: envoy.filters.http.router
                  typed_config:
                    "@type": type.googleapis.com/envoy.extensions.filters.http.router.v3.Router
        transport_socket:
          name: envoy.transport_sockets.tls
          typed_config:
            "@type": type.googleapis.com/envoy.extensions.transport_sockets.tls.v3.DownstreamTlsContext
            common_tls_context:
              tls_certificates:
                - certificate_chain:
                    filename: "/etc/envoy/tls/envoy.crt.pem"
                  private_key:
                    filename: "/etc/envoy/tls/envoy.key.pem"
{% endfor %}    
  clusters:
    - name: authz_server
      connect_timeout: 0.25s
      type: logical_dns
      load_assignment:
        cluster_name: authz_server
        endpoints:
          - lb_endpoints:
              - endpoint:
                  address:
                    socket_address:
                      address: localhost
                      port_value: {{ authz_server_port }}
    - name: consul
      connect_timeout: 0.25s
      type: static
      health_checks:
        - interval: 2s
          timeout: 3s
          no_traffic_interval: 4s
          no_traffic_healthy_interval: 4s
          unhealthy_threshold: 1
          healthy_threshold: 1
          http_health_check:
            path: "/v1/catalog/datacenters"
      load_assignment:
        cluster_name: consul
        endpoints:
          - lb_endpoints:
{% for ip in cluster_server_ips %}
              - endpoint:
                  address:
                    socket_address:
                      address: {{ ip }}
                      port_value: {{ consul_port }}
{% endfor %}
    - name: nomad
      connect_timeout: 0.25s
      type: static
      health_checks:
        - interval: 2s
          timeout: 3s
          no_traffic_interval: 4s
          no_traffic_healthy_interval: 4s
          unhealthy_threshold: 1
          healthy_threshold: 1
          http_health_check:
            path: "/v1/jobs"
      load_assignment:
        cluster_name: nomad
        endpoints:
          - lb_endpoints:
{% for ip in cluster_server_ips %}
              - endpoint:
                  address:
                    socket_address:
                      address: {{ ip }}
                      port_value: {{ nomad_port }}
{% endfor %}
    - name: fabio_ui
      connect_timeout: 0.25s
      type: static
      health_checks:
        - interval: 2s
          timeout: 3s
          no_traffic_interval: 4s
          no_traffic_healthy_interval: 4s
          unhealthy_threshold: 1
          healthy_threshold: 1
          http_health_check:
            path: "/health"
      load_assignment:
        cluster_name: fabio_ui
        endpoints:
          - lb_endpoints:
{% for ip in cluster_client_ips %}
              - endpoint:
                  address:
                    socket_address:
                      address: {{ ip }}
                      port_value: {{ fabio_ui_port }}
{% endfor %}
    - name: fabio_lb
      connect_timeout: 0.25s
      type: static
      health_checks:
        - interval: 2s
          timeout: 3s
          no_traffic_interval: 4s
          no_traffic_healthy_interval: 4s
          unhealthy_threshold: 1
          healthy_threshold: 1
          http_health_check:
            path: "/health"
      load_assignment:
        cluster_name: fabio_lb
        endpoints:
          - lb_endpoints:
{% for ip in cluster_client_ips %}
              - endpoint:
                  health_check_config:
                    port_value: {{ fabio_lb_port }}
                  address:
                    socket_address:
                      address: {{ ip }}
                      port_value: {{ fabio_lb_port }}
{% endfor %}